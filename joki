  <script>
    function setTemplate() {
      var jenis = document.getElementById("jenis").value;
      var pesan = document.getElementById("pesan");

      if (jenis === "skripsi") {
        pesan.value = "Saya ingin konsultasi pendampingan skripsi.
Judul sementara: 
Universitas/Jurusan: 
Kendala: ";
      } else if (jenis === "tesis") {
        pesan.value = "Saya ingin konsultasi pendampingan tesis.
Judul sementara: 
Program Studi: 
Kendala: ";
      } else if (jenis === "tugas") {
        pesan.value = "Saya ingin konsultasi bantuan tugas/makalah.
Mata kuliah: 
Deadline: ";
      }
    }

    function sendWhatsApp() {
      var nama = document.getElementById("nama").value;
      var jenis = document.getElementById("jenis").value;
      var pesan = document.getElementById("pesan").value;

      var nomor = "6281247581904";
      var text = `Halo, saya ${nama}.
Jenis layanan: ${jenis}.
${pesan}`;
      var url = "https://wa.me/" + nomor + "?text=" + encodeURIComponent(text);
      window.open(url, "_blank");
    }.
Kebutuhan: ${kebutuhan}.
Pesan: ${pesan}`;
      var url = "https://wa.me/" + nomor + "?text=" + encodeURIComponent(text);
      window.open(url, "_blank");
    }
  </script>

